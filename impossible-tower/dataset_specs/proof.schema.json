{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Impossible Tower Proof",
  "type": "object",
  "required": ["assumptions", "claims"],
  "properties": {
    "assumptions": {
      "type": "array",
      "items": {"type": "string"}
    },
    "claims": {
      "type": "array",
      "items": {"type": "string"}
    },
    "com_constraints": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "com_xy": {
            "type": "array",
            "items": {"type": "number"},
            "minItems": 2,
            "maxItems": 2
          },
          "supporters": {
            "type": "array",
            "items": {"type": "string"}
          },
          "within_support": {"type": "boolean"}
        }
      }
    },
    "supports": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {"type": "string"}
      }
    },
    "label": {
      "type": "object",
      "required": ["possible"],
      "properties": {
        "possible": {"type": "boolean"}
      }
    }
  }
}
